###########
# MODULES #
###########

[module/xwindow]
type = internal/xwindow
label = "   > %title:0:70:...%"

[module/filesystem-slash]
type = internal/fs
interval = 25

mount-0 = /
label-mounted = " %percentage_used%%"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = false
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.foreground}

label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-foreground = ${colors.foreground}
label-unfocused-padding = 2

label-urgent = %name%!
label-urgent-foreground = ${colors.darkred}
label-urgent-padding = 2

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-underline = $f3f99d
label-visible-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label = " %percentage%%"

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
label =  %percentage%%

[module/memory]
type = internal/memory
interval = 5
format = <label>
label =  %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <label-connected>
label-connected = " %essid%"

label-disconnected = "%{A1:connman-gtk &:}"
label-disconnected-foreground = #5b

[module/eth]
type = internal/network
interval = 3.0

format-connected-prefix = ""
format-connected-foreground-foreground = ${colors.foreground}

label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname%
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1
date = "%d %b"
time = "%H:%M"
format-foreground = ${colors.foreground}
label = "  %date%     %time%"

[module/volume]
type = internal/alsa

format-volume = <label-volume>
label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M
format-charging = <label-charging>
format-discharging = "<ramp-capacity><label-discharging>"
label-charging = " %percentage%%"
label-discharging = "%percentage%%"
label-full = " %{percentage}%%"

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
bar-capacity-width = 10
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750
[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${colors.foreground}
label-close = 
label-close-foreground = ${colors.foreground}
label-separator = |
label-separator-foreground = ${colors.darkgrey}

# Reboot
menu-0-0 = 
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.darkyellow}
# Shutdown
menu-0-1 = 
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.darkred}
# Logout
menu-0-2 = 
menu-0-2-exec = menu-open-3
menu-0-2-foreground = ${colors.lightgrey}
# Lock
menu-0-3 = 
# menu-0-3-exec = i3lock -i /home/michael/Pictures/alpaca.png -p default -d -n -c '#000000' -o '#191d0f' -w '#572020' -l '#333333' -e
menu-0-3-exec = betterlockscreen --lock
menu-0-3-foreground = ${colors.darkgreen}

menu-1-0 = reboot
menu-1-0-exec = sudo reboot
menu-1-0-foreground = ${colors.darkred}
menu-1-1 = cancel
menu-1-1-exec = menu-open-0
menu-1-1-foreground = ${colors.spotify-green}

menu-2-0 = power off
menu-2-0-exec = shutdown now
menu-2-0-foreground = ${colors.darkred}
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
menu-2-1-foreground = ${colors.spotify-green}

menu-3-0 = log out
menu-3-0-exec = i3-msg exit
menu-3-0-foreground = ${colors.darkred}
menu-3-1 = cancel
menu-3-1-exec = menu-open-0
menu-3-1-foreground = ${colors.spotify-green}

