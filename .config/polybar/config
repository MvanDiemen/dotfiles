spotify-green = #1db954

##########
# GLOBAL #
##########

[global/wm]
margin-top = 5
margin-bottom = 5

[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true

###########
# TOP BAR #
###########

[bar/top]
width = 100%
height = 25
offset-x = 0
offset-y = 0
monitor  = ${env:MONITOR}

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 0
overline-color = #f00
underline-size = 2
underline-color = #00f

border-bottom-size = 0
border-bottom-color = ${colors.background}

spacing = 1
padding-left = 1
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = Noto Mono:pixelsize=10;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=11;0

modules-left = date
modules-center = i3
modules-right = volume cpu memory filesystem-slash backlight battery powermenu

tray-position = right
tray-padding = 2
tray-transparent = true

