###########
# MODULES #
###########

[module/xwindow]
type = internal/xwindow
label = "   %{F#5b5b5b}> %title:0:70:...%"

[module/filesystem-slash]
type = internal/fs
interval = 25

mount-0 = /
label-mounted = "%{F#5b5b5b} %percentage_used%%"

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = false
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #FFF
label-mode-background = ${colors.primary}

label-focused = %name%
label-focused-background = #FFF
label-focused-foreground = #5b5b5b
label-focused-underline = #000
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-foreground = #5b5b5b
label-unfocused-padding = 2

label-urgent = %name%!
label-urgent-foreground = ${colors.darkred}
label-urgent-padding = 2

label-visible = %name%
label-visible-background = ${colors.background}
label-visible-underline = $f3f99d
label-visible-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight

format = <label>
label = "%{F#5b5b5b} %percentage%%"

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix =
format-padding =
format-prefix-foreground = ${colors.foreground-alt}
label = %{F#5b5b5b} %percentage%%

[module/memory]
type = internal/memory
interval = 5
format = <label>
format-prefix-foreground = ${colors.foreground-alt}
label = %{F#5b5b5b} %percentage_used%%
bar-used-width = 10
bar-used-foreground-0 = #5af78e
bar-used-foreground-1 = #5af78e
bar-used-foreground-2 = #f3f99d
bar-used-foreground-3 = #ff5c57
bar-used-fill = 
bar-used-empty = 
bar-used-empty-foreground = #444444
bar-used-indicator =

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #5b

format-connected-underline = #9f78e1

label-connected = "%{A1:connman-gtk &:}%essid%%{A}"
label-disconnected = "%{A1:connman-gtk &:}%{A}"
label-disconnected-foreground = #5b

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname%
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1
date = "%{F#5b5b5b}[%d %B]"
time = "%H%{F#92}%M%{F-}%{F#66}%S%{F-}"
format-prefix-foreground = ${colors.foreground-alt}
label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = "00%"


[module/battery]
type = custom/script
exec= acpitool | grep Battery | sed "s/[^.]*,//" | sed "s/[.].*//g" | sed "s/ //g"
format = <label>
label = "%{F#5b5b5b} %output%%"
interval = 60

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = ${colors.alert}
label-close =  cancel
label-close-foreground = ${colors.alert}
label-separator = |
label-separator-foreground = ${colors.darkgrey}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-0-foreground = ${colors.foreground}
menu-0-1 = power off
menu-0-1-exec = menu-open-2
menu-0-1-foreground = ${colors.foreground}
menu-0-2 = log out
menu-0-2-exec = menu-open-3
menu-0-2-foreground = ${colors.foreground}
menu-0-3 = 
menu-0-3-exec = i3lock -i /home/michael/Pictures/windows3.png -p default -d -n
menu-0-3-foreground = ${colors.foreground}

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-0-foreground = ${colors.foreground}
menu-1-1 = reboot
menu-1-1-exec = sudo reboot
menu-1-1-foreground = ${colors.foreground}

menu-2-0 = power off
menu-2-0-exec = shutdown now
menu-2-0-foreground = ${colors.foreground}
menu-2-1 = cancel
menu-2-1-exec = menu-open-0
menu-2-1-foreground = ${colors.foreground}

menu-3-0 = log out
menu-3-0-exec = i3-msg exit
menu-3-0-foreground = ${colors.foreground}
menu-3-1 = cancel
menu-3-1-exec = menu-open-0
menu-3-1-foreground = ${colors.foreground}

