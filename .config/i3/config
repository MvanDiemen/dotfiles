# Please see http://i3wm.org/docs/userguide.html for a complete reference!

###########
# GENERAL #
###########

font pango:Noto Sans UI 10

floating_modifier $mod
set $mod Mod1

gaps inner 0
gaps outer 5

###################
# COLOR VARIABLES #
###################

set $bg-color            #2f8fe2
set $bg-color-2          #636d83
set $inactive-bg-color   #282c34
set $text-color          #d6e9ff
set $inactive-text-color #6e88a6
set $urgent-bg-color     #e06c75
set $indicator           #c8ae9d

# Window colors
#                       border             background         text                 indicator
client.focused          $bg-color          $bg-color          $text-color          $indicator
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color $indicator
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color $indicator
client.urgent           $bg-color          $bg-color          $urgent-text-color   $indicator


################
# KEY BINDINGS #
################

# General
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+r mode "resize"

bindsym $mod+Shift+e exec "i3-nagbar -t warning -f DejaVu Sans Book 10 -m 'Logout?' -b 'Yes' 'i3-msg exit'"
bindsym $mod+Shift+x exec i3lock -i /home/michael/Pictures/windows3.png -p default -d -n

bindsym $mod+Return exec ~/.config/i3/start_terminal.sh
bindsym $mod+Shift+q kill
bindsym $mod+d exec rofi -show combi
bindsym $mod+Shift+d exec rofi -show window
bindsym $mod+p exec gnome-screenshot -a

# Change window
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move container to different output
bindsym $mod+Shift+} move container to output right
bindsym $mod+Shift+{ move container to output left

# Change layout
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 10"
bindsym XF86MonBrightnessUp   exec --no-startup-id "light -A 10"

bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer sset Master unmute;  amixer sset Master 7%+ "
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer sset Master unmute ; amixer sset Master 7%- "
bindsym XF86AudioMute 	 exec --no-startup-id amixer sset Master toggle

##############
# WORKSPACES #
##############

# Settings
workspace_auto_back_and_forth no
focus_on_window_activation smart

hide_edge_borders smart
new_window pixel 2

# Variables for workspaces
set $workspace1 "1: "
set $workspace2 "2: "
set $workspace3 "3: "
set $workspace4 "4: "
set $workspace5 "5: "
set $workspace6 "6: ?"
set $workspace7 "7: ?"
set $workspace8 "8: ?"
set $workspace9 "9: "
set $workspace10 "10: "

# assign workspaces to screens
workspace $workspace1 output HDMI-2
workspace $workspace2 output HDMI-2
workspace $workspace3 output HDMI-2
workspace $workspace4 output HDMI-2
workspace $workspace5 output HDMI-2
workspace $workspace6 output HDMI-2
workspace $workspace7 output HDMI-2
workspace $workspace8 output HDMI-2
workspace $workspace9 output HDMI-2
workspace $workspace10 output HDMI-2

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

########################
# WORKSPACE ASSIGNMENT #
########################

assign [class="Terminator"]        $workspace1
assign [class="Termite"]           $workspace1
assign [class="Franz"]             $workspace2
assign [class="Slack"]             $workspace2
assign [class="Chromium"]          $workspace3
assign [class="Firefox"]           $workspace3
assign [class="jetbrains-idea-ce"] $workspace4
assign [class="xfreerdp"]          $workspace5
assign [class="Nylas"]             $workspace9
assign [class="Thunderbird"]       $workspace9
assign [class="Spotify"]           $workspace10

for_window [class="Spotify"] move to workspace $workspace10
for_window [title="xfreerdp"] floating disable

#########
# EXECS #
#########

# Set dpi for screen
exec_always ~/.config/i3/i3_edp.sh

# Startup background tasks
exec --no-startup-id compton -b
exec --no-startup-id nm-applet
exec --no-startup-id redis-server
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Startup application scripts
exec ~/.config/i3/start_franz.sh
exec ~/.config/i3/start_slack.sh
exec ~/.config/i3/start_chromium.sh
exec ~/.config/i3/start_spotify.sh
exec ~/.config/i3/start_terminal.sh

# Set background
exec_always --no-startup-id feh --bg-scale ~/Pictures/deathstar.jpeg

# map keys on laptop keyboard
exec_always xmodmap ~/repos/dotfiles/.Xmodmap

##########
# RESIZE #
##########

mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt

  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

